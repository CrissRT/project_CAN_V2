@using System.Web.Optimization

@{
    ViewBag.Title = "Control Content";
    Layout = "~/Views/Shared/_LayoutPageAdmin.cshtml";
    
}
@Styles.Render("~/Content/css/admin/content")

<div class="adminPage">
    <div class="CourseBarr">
        <div class="courseSearch">
            <i class="bi bi-search"></i>
        </div>
        <a href="@Url.Action("AddContent", "Admin")" style="color: black;"><i class="bi bi-file-earmark-plus"></i></a>
    </div>

    <div class="courseList">
        @foreach (var content in ViewBag.content.TutorialTable)
        {
            <div class="adminCourseView">
                @{
                    var relativePath = Path.Combine(ViewBag.path, content.Image.imageName);
                }
                <img src="@Url.Content(relativePath)" />
                <h2>@content.title</h2>
                <div class="editRemoveCourse">
                    <div class="edit"><a href="@Url.Action("EditContent", "Admin", new {id = content.tutorialId})" style="color: black;"><i class="bi bi-pencil"></i></a></div>
                    <div class="remove"><a href="@Url.Action("RemoveContent", "Admin", new { id = content.tutorialId })" style="color: black;"><i class="bi bi-file-earmark-minus"></i></a></div>
                </div>
            </div>
        }
    </div>


</div>


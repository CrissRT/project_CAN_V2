@using System.Web.Optimization
@model project_CAN.Web.Models.User.UserLoginView
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutBlankPage.cshtml";
}
@Styles.Render("~/Content/css/login")

<body class="loginPage">
    @using (Html.BeginForm("Login", "Account", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
    <div class="loginContent">
        <h1>Logare</h1>
        <div class="login">
            @Html.TextBoxFor(model => model.credential, new { placeholder = "Username/Email" })
        </div>
        @Html.ValidationMessageFor(model => model.credential)

        <div class="parola">
            @Html.PasswordFor(model => model.password, new { placeholder = "Parola" })
        </div>
        @Html.ValidationMessageFor(model => model.password)

        <div id="error-div">@ViewBag.Error </div>
        <button type="submit" class="btn btn-secondary btn-lg">Logare</button>
        @Html.ActionLink("Nu ai cont? Înregistrează-te", "SignUp", "Account")
    </div>
    }
</body>